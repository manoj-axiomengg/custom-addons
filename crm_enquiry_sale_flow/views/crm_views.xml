<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Quick Create Popup -->
    <record id="view_crm_lead_quick_create_inherit_custom" model="ir.ui.view">
        <field name="name">crm.lead.quick.create.inherit.custom</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.quick_create_opportunity_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="custom_sequence" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Full Form -->
    <record id="view_crm_lead_inherit_custom_form" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.custom</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="custom_sequence" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>
