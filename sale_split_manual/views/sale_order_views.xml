<odoo>
    <record id="view_order_form_inherit_split" model="ir.ui.view">
        <field name="name">sale.order.form.split.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_delivery']" position="before">
                <button name="action_view_sale_order"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-shopping-cart"
                        string="SO's"
                        invisible = " state != 'draft' and state != 'sent'">
                    <field name="sale_count" widget="statinfo" string="Sale Order"/>
                </button>
            </xpath>  
            <xpath expr="//header" position="inside">
                <button name="action_open_split_wizard"
                        string="Create Multiple SO's"
                        type="object"
                        class="btn btn-secondary"
                        invisible = " state != 'draft'"/>
            </xpath>
        </field>
    </record>
</odoo>