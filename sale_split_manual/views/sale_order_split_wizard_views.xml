<odoo>
    <record id="view_sale_order_split_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.split.wizard.form</field>
        <field name="model">sale.order.split.wizard</field>
        <field name="arch" type="xml">
            <form string="Split Quotation into Multiple Orders">
                <sheet>
                    <group>
                        <field name="sale_order_id" readonly="1"/>
                        <field name="orders_count"/>
                        <field name="cancel_original"/>
                    </group>

                    <label for="line_ids" string="Assign lines to orders (use Order # 1..orders_count)"/>
                    <field name="line_ids">
                        <list editable="bottom">
                            <field name="product_id" />
                            <field name="name"/>
                            <field name="product_uom_qty" />
                            <field name="tax_id" />
                            <field name="price_unit" />
                            <!-- <field name="order_number"/> -->
                        </list>
                    </field>

                    <footer>
                        <button string="Create Orders" type="object" name="action_create_orders" class="btn-primary" context="{'close_after_action': True}"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>