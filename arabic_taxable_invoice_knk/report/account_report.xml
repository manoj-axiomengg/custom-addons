<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_invoices" model="ir.actions.report">
        <field name="name">FLEXI PDF QUOTE</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>

        <!-- Report template -->
        <field name="report_name">arabic_taxable_invoice_knk.report_invoice</field>
        <field name="report_file">arabic_taxable_invoice_knk.report_invoice</field>

        <!-- Attachment (for sale orders use object.name) -->
        <field name="attachment">
            (object.state in ('sale','done')) and ('INV' + (object.name or '').replace('/', '') + '.pdf')
        </field>

        <field name="print_report_name">
            (object._get_report_base_filename())
        </field>

        <!-- Paper format -->
        <field name="paperformat_id" ref="arabic_taxable_invoice_knk.paperformat_custom_invoice_report"/>

        <!-- Correct binding model -->
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
