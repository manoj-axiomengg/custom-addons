    <tr>
        <td style="padding:4px; width:70%; font-weight:bold;">
            Amount in Words:
            <span style="margin-left:10px; font-weight:normal;">
                <t t-out="o.currency_id.amount_to_text(o.amount_total)"/>
            </span>
        </td>

        <td style="padding:4px; width:15%; font-weight:bold; text-align:right;">
            Total
        </td>

        <td style="padding:4px; width:15%; text-align:right;">
            <t t-esc="o.amount_total"/>
        </td>
    </tr>
</table> -->

            <div class="footer">
                
                <div class="text-center mt-2">
                    <!-- <span class="text-center" style="text-align: center"> -->
                        <img t-if="o.company_id.knk_footer" t-att-src="image_data_uri(o.company_id.knk_footer)" style="max-height: 100; max-width: 100%" alt="footer"/>
                    <!-- </span> -->
                </div>
        <div t-if="report_type == 'pdf'" class="text-muted text-center ">
            Page: 
                <span class="page"/> / 
                <span class="topage"/>
            </div>
            </div>
            </div>
        </t>
         
        
    </template>

    <!-- ================================
         REPORT WRAPPER
       ================================ -->
    <template id="report_saleorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="arabic_taxable_invoice_knk.report_saleorder_doc" t-lang="lang"/>
            </t>
        </t>
    </template>

    <!-- ================================
         REPORT ACTION
       ================================ -->
    

</odoo>
