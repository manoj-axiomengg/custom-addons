<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_knk" model="ir.ui.view">
        <field name="name">sale.order.form.knk</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

           
             <xpath expr="//field[@name='partner_id']" position="after">
                        <field name="attention" invisible="state != 'draft' and state != 'sent'"/>
                        <!-- <field name="fax"/> -->
                        <field name="customer_rfq" invisible="state != 'draft' and state != 'sent'"/>
                        <field name="delivery_terms" invisible="state != 'draft' and state != 'sent'"/>
                        <field name="x_contract_no" invisible="state != 'sale'"/>
                        
                    
            </xpath>
             <xpath expr="//field[@name='payment_term_id']" position="after">
                        
                        <field name="manufacturer" invisible="state != 'draft' and state != 'sent'"/>
                        <field name="delivery_period" invisible="state != 'draft' and state != 'sent'"/>
                        <field name="x_kwgm_qtn" invisible="state != 'sale'"/>
                        <field name="x_cust_po_type" invisible="state != 'sale'"/>
                    
            </xpath>

        </field>
    </record>
</odoo>
